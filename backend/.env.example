# EKNMusic Backend Environment Variables

# Environment
ENVIRONMENT=development  # development, staging, production
DEBUG=true
LOG_LEVEL=INFO

# Database Configuration
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=eknmusic_dev
DATABASE_USER=postgres
DATABASE_PASSWORD=your_secure_password_here
DATABASE_URL=postgresql://${DATABASE_USER}:${DATABASE_PASSWORD}@${DATABASE_HOST}:${DATABASE_PORT}/${DATABASE_NAME}

# Database Pool Settings
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_BASE_PATH=/api/v1

# Security
JWT_SECRET_KEY=your-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Password Hashing
PASSWORD_HASH_ALGORITHM=bcrypt  # bcrypt or argon2
BCRYPT_ROUNDS=12

# AWS Configuration (for deployment)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_LAMBDA_FUNCTION_NAME=eknmusic-backend-dev

# S3 Storage
S3_BUCKET_NAME=eknmusic-files-dev
S3_BUCKET_REGION=us-east-1
S3_PRESIGNED_URL_EXPIRATION=3600  # seconds

# CloudFront (optional)
CLOUDFRONT_DISTRIBUTION_ID=
CLOUDFRONT_DOMAIN=

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOW_HEADERS=*

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60  # seconds

# File Upload
MAX_UPLOAD_SIZE_MB=100
ALLOWED_FILE_EXTENSIONS=.mp3,.flac,.wav,.m4a,.ogg

# Email Configuration (if needed)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@eknmusic.com
SMTP_USE_TLS=true

# Redis (optional, for caching/sessions)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_CACHE_TTL=300  # seconds

# Monitoring and Logging
SENTRY_DSN=  # Sentry error tracking
CLOUDWATCH_LOG_GROUP=/aws/lambda/eknmusic-backend
ENABLE_REQUEST_LOGGING=true

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_EMAIL_VERIFICATION=false
ENABLE_FILE_UPLOAD=true

# Third-party API Keys (if needed)
STRIPE_API_KEY=
STRIPE_WEBHOOK_SECRET=

# AzuraCast Radio Configuration
AZURACAST_BASE_URL=https://your-radio-url.com
AZURACAST_API_KEY=your_api_key_here
AZURACAST_STATION_ID=1

# Testing (for test environment)
TEST_DATABASE_URL=postgresql://postgres:password@localhost:5432/eknmusic_test
